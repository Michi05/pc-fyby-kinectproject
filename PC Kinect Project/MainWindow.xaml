<Window x:Class="FallRecognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User tracking with Microsoft SDK" Height="719" Width="862" Loaded="Window_Loaded" DataContext="{Binding}">
    <DockPanel LastChildFill="True">
        
        <StatusBar Name="statusBar"  MinHeight="40" DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="textBlock" Background="LemonChiffon" FontSize='10'> Ready </TextBlock>
            </StatusBarItem>
        </StatusBar>
        <Grid DockPanel.Dock="Top">
            <Image Name="imgCamera" Width="820" ClipToBounds="True" Margin="10,0" />
            <Canvas Width="820" Height="510" Name="skeletonCanvas"   ClipToBounds="True"></Canvas>
            <Button Content="Update... Background?" Height="28" HorizontalAlignment="Left" Margin="365,592,0,20" Name="button1" VerticalAlignment="Top" Width="142" />
            <Button Content="Tilt Camera" Height="28" Name="button2" Width="142" Margin="65,592,633,20" Click="button2_Click" />
            <Button Content="Close everything" Name="button3" Margin="665,592,65,20" />
        </Grid>
    </DockPanel>
</Window>
